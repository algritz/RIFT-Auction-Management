<h1>Listing items</h1>
<%= form_for :search, @search, :html => {:method => :get} do |f| %>
<%= f.label :Item_name %>
<%= f.text_field :description_contains %>
<br />
<%= f.submit %>
<% end %>
<%= will_paginate @items %>
<table>
	<tr>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;" align="left">Description</th>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;">Sells from vendor for</th>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;">Vendor buys for</th>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;">Source</th>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;"></th>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;"></th>
		<th style="padding-top:0px;padding-right:20px;padding-bottom:0px;padding-left:0px;"></th>
	</tr>

	<% @items.each do |item|
	isNewRow(item.id)
	%>
	<tr bgcolor="<%= @lastRowColor %>">
		<td><%= item.description %></td>
		<td><%= formatPrice(item.vendor_selling_price) %></td>
		<td><%= formatPrice(item.vendor_buying_price) %></td>
		<td><%= getSourceDescription(item.source_id) %></td>
		<td><%= link_to 'Show', item %></td>
		<td><%= link_to 'Edit', edit_item_path(item) %></td>
		<td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
