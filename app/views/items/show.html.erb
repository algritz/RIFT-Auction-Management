<p id="notice">
	<%= notice %>
</p>

<p>
	<b>Description:</b>
	<%= @item.description %>
</p>

<p>
	<b>Vendor selling price:</b>
	<%= formatPrice(@item.vendor_selling_price) %>
</p>

<p>
	<b>Vendor buying price:</b>
	<%= formatPrice(@item.vendor_buying_price) %>
</p>

<p>
	<b>Source:</b>
	<%= getSourceDescription(@item.source_id) %>
</p>
<p>
	<b>Item level:</b>
	<%= @item.item_level %>
</p>
<p>
	<b>Is crafted:</b>
	<%= @item.is_crafted %>
</p>
<p>
	<b>Is to be listed:</b>
	<%= @item.to_list %>
</p>
<p><b>Notes:</b><br /><%= @item.note %></p>
<p>
	<b>Average sales price:</b>
	<%= formatPrice(averageSalesPrice(@item.id))%>
</p>
<p>
	<b>Last sales price:</b>
	<%= formatPrice(lastSalesPrice(@item.id))%>
</p>
<p>
	<b>Last listings:</b><p style='padding-left:20px;padding-top:-20px;'>
	<table width="100">
			<% @lastListings = lastListings(@item.id) %>
			<%
			@lastListings.each do |key, value|
			isNewRow(key)
			%>
			<tr bgcolor="<%= @lastRowColor %>">
				<td> <%= "#{ListingStatus.find(key).description}:" %> <span align='right'><%= "#{value}" %></span></td>
			</tr>
			<%
			end
			%>
		</table>
</p>

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
