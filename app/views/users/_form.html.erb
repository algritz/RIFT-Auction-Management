<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<% if @creation_code== nil then%>
<div>
	<h3>Account Creation is disabled at the moment, please come back later.</h3>
</div>
<% else %>
<div class="field">
	<%= f.label :name %>
	<br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :email %>
	<br />
	<%= f.text_field :email %>
</div>
<div class="field">
	<%= f.label :password %>
	<br />
	<%= f.password_field :password %>
</div>
<div class="field">
	<%= f.label :password_confirmation %>
	<br />
	<%= f.password_field :password_confirmation %>
</div>
<div class="field">
	<%= f.label :creation_code %>
	<br />
	<%= f.text_field :creation_code, :value => (if @creation_code!= nil then @creation_code.creation_code else nil end), :size => 75, :disabled => true %>
	<%= f.hidden_field :creation_code, :value => (if @creation_code!= nil then @creation_code.creation_code else nil end) %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
<% end %> 