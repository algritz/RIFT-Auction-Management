<h1>Items to list from Bank</h1>
<table width="1336">
	<tr align="left">
		<th>Item name</th>
		<th>Stacksize</th>
		<th>Source</th>
		<th>Crafting Cost</th>
		<th align="center">Actions</th>
	</tr>
	<%
	@sitting_in_bank.each do |item|
	isNewRow(item)
	%>
	<tr bgcolor="<%= @lastRowColor %>" onmouseover="this.className = 'hlt';" onmouseout="this.className = '';">
		<td><%= "#{getItemDescription(item)}"%></td>
		<td><%= bank_stacksize(item) %></td>
		<td style='padding-right:20px;'><%= "#{getSourceDescriptionForItemsToCraft(item)}"%></td>
		<td style='padding-right:20px;'><%= "#{formatPrice(calculateCraftingCost(item))}"%></td>
		<td><%= link_to "Put in inventory", in_inventory_sales_listing_path(item) %></td>
	</tr>
	<% end %>
</table>