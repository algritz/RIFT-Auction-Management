<h1>Listing sales_listings</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Stacksize</th>
    <th>Price</th>
    <th>Undercut price</th>
    <th>Deposit cost</th>
    <th>Listing status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sales_listings.each do |sales_listing| %>
  <tr>
    <td><%= sales_listing.item_id %></td>
    <td><%= sales_listing.stacksize %></td>
    <td><%= sales_listing.price %></td>
    <td><%= sales_listing.undercut_price %></td>
    <td><%= sales_listing.deposit_cost %></td>
    <td><%= sales_listing.listing_status_id %></td>
    <td><%= link_to 'Show', sales_listing %></td>
    <td><%= link_to 'Edit', edit_sales_listing_path(sales_listing) %></td>
    <td><%= link_to 'Destroy', sales_listing, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

