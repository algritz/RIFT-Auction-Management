<h1>Listing price_overrides</h1>
<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
Search term:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag :search %>
<br />
<% end %>
<% end %>
<table>
  <tr align="left">
    <th>Item</th>
    <th>Price per</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @price_overrides.each do |price_override| %>
  <tr>
    <td style="padding-right: 20px;"><%= getItemDescription(price_override.item_id) %></td>
    <td accesskey="right" style="padding-right: 20px;"><%= formatPrice(price_override.price_per) %></td>
    <td><%= link_to 'Show', price_override %></td>
    <td><%= link_to 'Edit', edit_price_override_path(price_override) %></td>
    <td><%= link_to 'Destroy', price_override, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Price override', new_price_override_path %>
