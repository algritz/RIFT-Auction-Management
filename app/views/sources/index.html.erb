<h1>Listing sources</h1>

<table width="1336">
  <tr align="left">
    <th>Description</th>
    <th>Crafting allowed</th>
    <th colspan="3" align="center">Actions</th>
  </tr>

<% @sources.each do |source|
	isNewRow(source.id)
	%>
	<tr bgcolor="<%= @lastRowColor %>" onmouseover="this.className = 'hlt';" onmouseout="this.className = '';">
    <td><%= source.description %></td>
    <td><%= source.crafting_allowed %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Source', new_source_path %>
